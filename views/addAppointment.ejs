<%- include("template/header" ) %>

    <div class="container-sm my-container">

        <h1 class="text-center">Create a new Appointment</h1>

        <form action="/newAppointment" class="my-2" method="POST">
            <div class="mb-3">
                <label for="userIdentificationInput" class="form-label"><h5 class="h5">User Identification</h5></label>
                <input type="number" placeholder="Write the user Identification number" class="form-control" name="idNumberUser" id="userIdentificationInput" required>
            </div>
            <div class="mb-3">
                <label for="doctorSpecialty" class="form-label"><h5 class="h5">Doctor Specialty</h5></label>
                <select id="doctorSpecialty" class="form-select" name="specialty" required>
                  <option>Medicina general</option>
                  <option>Cardiologia</option>
                  <option>Medicina interna</option>
                  <option>Dermatologia</option>
                  <option>Rehabilitacion fisica</option>
                  <option>Psicologia</option>
                  <option>Odontologia</option>
                  <option>Radiologia</option>
                </select>
            </div>
            <button type="submit" class="btn btn-dark btn-lg">Submit</button>
        </form>

    </div>


<%- include("template/footer") %>